{{!
    @template block_checklist/mobile_view_overview

    Display checklist overview block in the mobile app

    Context variables required for this template:
    * title, allcourses, checklists

    Example context (json):
    {
        "title": "Checklist overview",
        "allcourses": true,
        "checklists": [
            {
                "shortname": "FC",
                "name": "First checklist",
                "viewurl": "SITEURL/mod/checklist/view.php?id=1",
                "progress": 50
            }
        ]
    }
}}
{{=<% %>=}}
<ion-item-divider class="ion-text-wrap" [sticky]="true">
    <ion-label>
        <h2><% title %></h2>
    </ion-label>
</ion-item-divider>
<ion-list>
    <%#checklists%>
    <%#allcourses%>
    <ion-item class="ion-text-wrap">
        <ion-label><p class="item-heading"><% shortname %></p></ion-label>
    </ion-item>
    <%/allcourses%>
    <ion-item button class="ion-text-wrap" href="<% viewurl %>" core-link [capture]="true" detail="true">
        <ion-label>
            <p><% name %></p>
            <core-progress-bar progress="<% progress %>"></core-progress-bar>
        </ion-label>
    </ion-item>
    <%/checklists%>
</ion-list>
