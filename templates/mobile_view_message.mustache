{{!
    @template block_checklist/mobile_view_message

    Display a message in the block in the mobile app

    Context variables required for this template:
    * message

    Example context (json):
    {
        "message": "Please edit this block to select a checklist to display"
    }
}}
{{=<% %>=}}
<ion-item-divider class="ion-text-wrap" [sticky]="true">
    <ion-label>
        <h2>{{ 'plugin.block_checklist.checklist' | translate }}</h2>
    </ion-label>
</ion-item-divider>
<ion-item class="ion-text-wrap">
    <ion-label>
        <% message %>
    </ion-label>
</ion-item>
